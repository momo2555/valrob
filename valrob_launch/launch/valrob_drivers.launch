<launch>

    <!-- launch the driver control for the stm32 motor card -->
    <node pkg="valrob_driver" type="valrob_motorcontrol" name="valrob_motorcontrol">

    </node>

    <!-- velocity command node -->
    <node pkg="valrob_driver" type="valrob_cmdvel" name="valrob_cmdvel">

    </node>

     <!-- velocity odom request sender -->
     <node pkg="valrob_driver" type="valrob_odom" name="valrob_odom">

    </node>
    
    <!-- imu node -->
    <node pkg="valrob_driver" type="valrob_imu" name="valrob_imu">

    </node>

    <!-- kalman filter -->
    <include file="$(find valrob_launch)/launch/valrob_kalman.launch" />

    <!-- run the laser sensor (lidar) -->
    <node pkg="hokuyo_node" type="hokuyo_node" name="hokuyo_node">
        <param name="calibrate_time" value="false"/>
        <param name="port" value="/dev/ttyACM0"/> <!--Changer port si robot branche-->>
        <param name="min_ang_limit" value="-2.0862138271331787"/>
        <param name="max_ang_limit" value="2.0862138271331787"/>
    </node>

</launch>